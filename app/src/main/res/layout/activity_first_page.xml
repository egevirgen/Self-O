<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.corp.theapp.FirstPage">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bgblr"
        android:scaleType="centerCrop"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:elevation="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:overScrollMode="never"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:id="@+id/start_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_centerInParent="true"
                android:src="@drawable/launch_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                style="@style/Widget.AppCompat.ProgressBar"
                android:indeterminate="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:alpha="0"
            android:background="#E0E0E0"
            android:id="@+id/signed_in_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:tint="#90000000"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@+id/profile_mail"
                android:id="@+id/profile_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/profile_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/exit"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/profile_edit"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/edit"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:fadingEdge="vertical"
                />


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/profile_background"
    android:scrollbars="none"
    >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <android.support.v7.widget.CardView
                    android:layout_marginTop="0.5dp"
                    android:id="@+id/profile_scan_qr"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    >

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/profile_scan_qr_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/profile_qr_text_4"
                            android:src="@drawable/qr"
                            android:scaleType="centerCrop"
                            android:minHeight="150dp"
                            android:layout_alignParentTop="true"
                            />


                        <TextView
                            android:id="@+id/profile_qr_text_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Scan QR Code"
                            android:minHeight="150dp"
                            android:textColor="#FFFFFF"
                            android:background="#90000000"
                            android:padding="10dp"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Access restaurant's content, order something, join the polls and more. //UNDER CONSTRUCTION//"
                            android:textColor="#90000000"
                            android:layout_below="@+id/profile_qr_text_4"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:textSize="14dp"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardElevation="0dp"
                    android:layout_marginTop="0.5dp"
                    app:cardCornerRadius="0dp"
                    android:id="@+id/profile_participating_workplaces"
                    android:layout_below="@+id/profile_scan_qr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/profile_participating_workplaces_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="150dp"
                            android:src="@drawable/participating_workplaces"
                            android:scaleType="centerCrop"
                            android:layout_alignParentTop="true"
                            android:layout_alignBottom="@+id/profile_qr_text_2"
                            />


                        <TextView
                            android:id="@+id/profile_qr_text_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Participating Workplaces"
                            android:textColor="#FFFFFF"
                            android:background="#90000000"
                            android:textStyle="bold"
                            android:padding="10dp"
                            android:gravity="center"
                            android:minHeight="150dp"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get directions to your favorite places and more. //UNDER CONSTRUCTION//"
                            android:textColor="#90000000"
                            android:layout_below="@+id/profile_qr_text_2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:textSize="14dp"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardElevation="0dp"
                    android:layout_marginTop="0.5dp"
                    app:cardCornerRadius="0dp"
                    android:id="@+id/profile_checkin_order_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_participating_workplaces"
                    >

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/profile_checkin_order_history_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="150dp"
                            android:src="@drawable/history"
                            android:scaleType="centerCrop"
                            android:layout_alignParentTop="true"
                            android:layout_alignBottom="@+id/profile_qr_text_3"
                            />



                        <TextView
                            android:id="@+id/profile_qr_text_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check-in and Order History"
                            android:textColor="#FFFFFF"
                            android:background="#90000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textSize="18dp"
                            android:minHeight="150dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See your check-in, order, payment, calorie intake histories and more. //NOT CLICKABLE AT THE MOMENT//"
                            android:textColor="#90000000"
                            android:layout_below="@+id/profile_qr_text_3"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:textSize="14dp"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

</ScrollView>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                app:civ_border_width="2dp"
                app:civ_border_color="#90FFFFFF"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profile_exit"/>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profile_image"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/profile_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profile_name"
                android:paddingBottom="15dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_1"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="40dp"
                android:text="Self-O"
                android:alpha="0"
                />
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:background="#20FFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            app:tabTextColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabIndicatorHeight="2dp"
            android:background="#FFFFFF"
            android:layout_height="35dp"
            app:tabIndicatorColor="#DDFFFFFF"
            android:layout_gravity="top" />
    </android.support.v4.view.ViewPager>

</android.support.design.widget.CoordinatorLayout>
